function [x,y] = getBeaconPos(height, xPx, pose)
    
        % Camera parameters
        focalLen = 3.04 * 10^-3;  % m
        beaconHeight = 0.157;   % m
        pixSize = 11.5 * 10^-6; % 
        imWidth = 320;         % px
        hFov = deg2rad(62.2);   % rad

        % Calculate distance
        distance = beaconHeight / (height * pixSize) * focalLen;

        % Calculate angle
        xRel = (xPos - (imgWidth/2)) / (imgWidth/2);
        disp(xRel)
        angle = -(hFov/2) * xRel;
        
        pos = [pose(1) + distance * cos(pose(3) + angle), ...
               pose(2) + distance * sin(pose(3) + angle)];
    
end